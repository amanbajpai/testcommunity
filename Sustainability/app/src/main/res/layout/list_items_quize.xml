<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/answerView"
        android:padding="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_marginTop="@dimen/_4sdp"
        app:cardBackgroundColor="@color/white_transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="horizontal">

            <com.gdc.isfacademy.view.customs.customfonts.OpenSansLightTextview
                android:layout_width="match_parent"
                android:id="@+id/columnName"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/_5sdp"
                android:text="@string/txt_dot_a"
                android:textSize="@dimen/_14sdp"
                tools:ignore="RtlHardcoded" />

            <com.gdc.isfacademy.view.customs.customfonts.OpenSansLightTextview
                android:layout_width="match_parent"
                android:id="@+id/answerText"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/dummy_text_answer"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>