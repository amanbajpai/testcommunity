<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:paddingBottom="@dimen/_12sdp"
            android:paddingTop="@dimen/_12sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gdc.isfacademy.view.customs.customfonts.OpenSansLightTextview
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:textColor="@color/challange_text_color"
                android:id="@+id/people_rank_text"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="RelativeOverlap,RtlHardcoded" />
            <ImageView
                android:visibility="invisible"
                android:src="@drawable/first_place"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_centerVertical="true"
                android:id="@+id/rank_icon"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <com.gdc.isfacademy.view.customs.customfonts.OpenSansLightTextview
                android:layout_width="match_parent"
                android:textColor="@color/challange_text_color"
                android:id="@+id/name_text"
                android:text=""
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_toLeftOf="@+id/rank_points_text"
                android:textSize="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded" />
            <com.gdc.isfacademy.view.customs.customfonts.OpenSansLightTextview
                android:layout_width="wrap_content"
                android:id="@+id/rank_points_text"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:textColor="@color/challange_text_color"
                android:text=""
                android:textSize="@dimen/_15sdp"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                tools:ignore="RtlHardcoded" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>