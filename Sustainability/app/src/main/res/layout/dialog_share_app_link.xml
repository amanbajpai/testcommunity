<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_15sdp"
    android:layout_marginRight="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_40sdp"
    android:background="@drawable/white_dialog_selector"
    android:orientation="vertical">


    <ImageView
        android:layout_alignParentEnd="true"
        android:padding="@dimen/_10sdp"
        android:src="@drawable/cancel"
        android:id="@+id/cancelBtn"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/oh_ho"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



        <com.gdc.isfacademy.view.customs.customfonts.OpenSansBoldTextView
            android:id="@+id/messageDescription"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:clickable="true"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="@string/txt_no_friend_available"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/shareBtn"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_20sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/btn_red_stoke_selector"
            android:clickable="true"
            android:gravity="center"
            android:textStyle="bold"
            android:paddingBottom="@dimen/_2sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:paddingTop="@dimen/_2sdp"
            android:text="@string/txt_share_app_link_for_download"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />
    </LinearLayout>





</RelativeLayout>