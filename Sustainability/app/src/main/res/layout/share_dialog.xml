<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/_10sdp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.energybox.isf.view.customs.customfonts.OpenSansLightTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_16sdp"
            android:gravity="center"
            android:text="Share to"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_16sdp" />

        <com.energybox.isf.view.customs.customfonts.OpenSansLightTextview
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_5sdp"
            android:gravity="center"
            android:text="Will also share to your profile too"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/_11sdp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/insta_image"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_instagram" />

            <ImageView
                android:id="@+id/whats_app_image"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_whats_app" />

            <ImageView
                android:id="@+id/google_image"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:src="@drawable/ic_google" />

            <ImageView
                android:id="@+id/chat_image"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:src="@drawable/ic_share" />

        </LinearLayout>

        <com.energybox.isf.view.customs.customfonts.OpenSansSemiBoldTextView
            android:id="@+id/profile_share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/blue_rect_crop_bg"
            android:paddingBottom="@dimen/_5sdp"
            android:paddingLeft="@dimen/_17sdp"
            android:paddingRight="@dimen/_17sdp"
            android:paddingTop="@dimen/_5sdp"
            app:textAllCaps="true"
            android:text="Share to my profile only"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />


        <com.energybox.isf.view.customs.customfonts.OpenSansSemiBoldTextView
            android:id="@+id/cancel_tv"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/txt_cancel"
            android:textSize="@dimen/_13sdp"
            android:textColor="#989fa4" />

    </LinearLayout>

</LinearLayout>